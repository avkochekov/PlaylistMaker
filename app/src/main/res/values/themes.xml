<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuBackground">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginHorizontal">@dimen/margin</item>
        <item name="android:backgroundTint">@color/button_bg</item>
        <item name="android:text">@string/menu_search</item>
        <item name="android:textColor">@color/button_txt</item>
        <item name="android:textSize">@dimen/menu_btn_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/menu_icon_padding</item>
        <item name="cornerRadius">@dimen/menu_btn_radius</item>
    </style>

    <style name="SettingsTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_btn_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/settings_btn_margin</item>
        <item name="android:layout_marginBottom">@dimen/settings_btn_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsImageViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/settings_btn_image_margin_left</item>
        <item name="android:layout_marginTop">@dimen/settings_btn_image_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_btn_image_margin_bottom</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="tint">@color/gray</item>
    </style>

    <style name="ToolBarButtonStyle">
        <item name="navigationIcon">@drawable/ic_24x24_arrow_back</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="ToolBarTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>