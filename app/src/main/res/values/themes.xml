<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="trackMainColor" format="color"/>
    <attr name="trackAdditionalColor" format="color"/>

    <attr name="textColor" format="color"/>

    <attr name="searchTextColor" format="color"/>

    <attr name="errorTextColor" format="color"/>
    <attr name="updateButtonBgColor" format="color"/>
    <attr name="updateButtonTextColor" format="color"/>
    <attr name="playButtonBackgroundColor" format="color"/>

    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/YP_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="trackMainColor">@color/black</item>
        <item name="trackAdditionalColor">@color/smoke</item>

        <item name="searchTextColor">@color/YP_black</item>

        <item name="errorTextColor">@color/black</item>
        <item name="updateButtonBgColor">@color/YP_black</item>
        <item name="updateButtonTextColor">@color/YP_white</item>
        <item name="textColor">@color/black</item>
        <item name="playButtonBackgroundColor">@color/black</item>
    </style>

    <style name="MenuBackground">
        <item name="android:background">@color/YP_blue</item>
    </style>

    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/menu_btn_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/menu_icon_padding</item>
        <item name="cornerRadius">@dimen/menu_btn_radius</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SettingsTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/settings_btn_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/settings_btn_margin</item>
        <item name="android:layout_marginBottom">@dimen/settings_btn_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsImageViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/settings_btn_image_margin_left</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="tint">@color/gray</item>
    </style>

    <style name="ToolBarButtonStyle">
        <item name="navigationIcon">@drawable/ic_24x24_arrow_back</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="ToolBarTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="EditeTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/search_txt_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:color">@color/black</item>
    </style>
    <style name="SearchTextViewStyle.TrackName">
        <item name="android:textColor">?attr/trackMainColor</item>
        <item name="android:textSize">@dimen/trackItem_mainText_size</item>
    </style>
    <style name="SearchTextViewStyle.ArtistName">
        <item name="android:textColor">?attr/trackAdditionalColor</item>
        <item name="android:textSize">@dimen/trackItem_additionalText_size</item>
    </style>
    <style name="SearchTextViewStyle.Separator">
        <item name="android:foregroundGravity">center</item>
        <item name="tint">?attr/trackAdditionalColor</item>
    </style>
    <style name="SearchTextViewStyle.TrackTime">
        <item name="android:textColor">?attr/trackAdditionalColor</item>
        <item name="android:textSize">@dimen/trackItem_additionalText_size</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="ErrorPlaceholderStyle">
        <item name="android:textColor">?attr/errorTextColor</item>
        <item name="android:textSize">@dimen/search_errorText_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/updateButtonBgColor</item>
        <item name="android:textColor">?attr/updateButtonTextColor</item>
        <item name="android:textSize">@dimen/updateButtonTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal">@dimen/updateButtonHorizontalPadding</item>
        <item name="android:paddingVertical">@dimen/updateButtonVerticalPadding</item>
        <item name="cornerRadius">@dimen/updateButtonRadius</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AudioPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="TrackMainInfo" parent="AudioPlayer">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackMainInfo.TrackName">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TrackMainInfo.TrackTime">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TrackMainInfo.ArtistName">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrackAdditionalInfo" parent="AudioPlayer">
        <item name="android:textSize">13sp</item>
    </style>

</resources>