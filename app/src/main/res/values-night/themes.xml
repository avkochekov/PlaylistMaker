<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/YP_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/YP_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="trackMainColor">@color/white</item>
        <item name="trackAdditionalColor">@color/white</item>

        <item name="errorTextColor">@color/white</item>
        <item name="updateButtonBgColor">@color/YP_white</item>
        <item name="updateButtonTextColor">@color/YP_black</item>
        <item name="textColor">@color/YP_white</item>
        <item name="playButtonBackgroundColor">@color/YP_white</item>

        <item name="searchFieldColor">@color/YP_white</item>

        <item name="imageButtonColor">@color/white</item>
        <item name="backgroundColor">@color/YP_black</item>

        <item name="menuSelectedItemColor">@color/YP_blue</item>
        <item name="menuUnselectedItemColor">@color/YP_white</item>

        <item name="snackBarBackgroundColor">@color/YP_white</item>
        <item name="snackBarTextColor">@color/YP_black</item>

        <item name="dashColor">@color/YP_white</item>
        <item name="playlist_tracksCount_textColor">@color/YP_white</item>

        <item name="grayControlsBackgroundColor">@color/YP_button_dark_gray</item>
    </style>

    <style name="MenuBackground">
        <item name="android:background">@color/YP_black</item>
    </style>

    <style name="SettingsImageViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/settings_btn_image_margin_left</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ToolBarTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditeTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/search_txt_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackListControl">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchTextViewStyle.ImageView">
        <item name="tint">@color/YP_black</item>
    </style>
</resources>