<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_24x24_arrow_back"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:text="@string/menu_settings"
            android:textColor="@color/button_txt"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:gravity="center_vertical" />

    </androidx.appcompat.widget.Toolbar>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:switchPadding="@dimen/settings_btn_image_margin_left"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="6dp"
        android:paddingVertical="@dimen/settings_btn_margin"
        android:text="@string/settings_theme"
        android:textSize="@dimen/settings_btn_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/settings_btn_right_padding"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_btn_margin"
            android:layout_marginBottom="@dimen/settings_btn_margin"
            android:text="@string/settings_share"
            android:textColor="@color/button_txt"
            android:gravity="center_vertical"
            android:textSize="@dimen/settings_btn_text_size"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_24x24_share"
            android:layout_marginLeft="@dimen/settings_btn_image_margin_left"
            android:layout_marginTop="@dimen/settings_btn_image_margin_top"
            android:layout_marginBottom="@dimen/settings_btn_image_margin_bottom"
            android:layout_gravity="center_vertical|end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/settings_btn_right_padding"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_btn_margin"
            android:layout_marginBottom="@dimen/settings_btn_margin"
            android:text="@string/settings_support"
            android:textColor="@color/button_txt"
            android:gravity="center_vertical"
            android:textSize="@dimen/settings_btn_text_size"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_24x24_support"
            android:layout_marginLeft="@dimen/settings_btn_image_margin_left"
            android:layout_marginTop="@dimen/settings_btn_image_margin_top"
            android:layout_marginBottom="@dimen/settings_btn_image_margin_bottom"
            android:layout_gravity="center_vertical|end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/settings_btn_right_padding"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_btn_margin"
            android:layout_marginBottom="@dimen/settings_btn_margin"
            android:text="@string/settings_license"
            android:textColor="@color/button_txt"
            android:gravity="center_vertical"
            android:textSize="@dimen/settings_btn_text_size"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_24x24_arrow_forward"
            android:layout_marginLeft="@dimen/settings_btn_image_margin_left"
            android:layout_marginTop="@dimen/settings_btn_image_margin_top"
            android:layout_marginBottom="@dimen/settings_btn_image_margin_bottom"
            android:layout_gravity="center_vertical|end"/>
    </LinearLayout>

</LinearLayout>
