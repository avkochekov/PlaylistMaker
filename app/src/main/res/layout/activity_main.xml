<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    style="@style/MenuBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_title"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="start|center"
        android:layout_marginTop="14dp"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding">

        <Button
            android:id="@+id/menu_search"
            style="@style/MenuButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            android:text="@string/menu_search"
            app:icon="@drawable/ic_24x24_search"
            app:iconTint="@color/button_txt" />

        <Button
            android:id="@+id/menu_library"
            style="@style/MenuButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/menu_library"
            app:icon="@drawable/ic_24x24_library"
            app:iconTint="@color/button_txt"/>

        <Button
            android:id="@+id/menu_settings"
            style="@style/MenuButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="28dp"
            android:text="@string/menu_settings"
            app:icon="@drawable/ic_24x24_settings"
            app:iconTint="@color/button_txt" />
    </LinearLayout>
</LinearLayout>