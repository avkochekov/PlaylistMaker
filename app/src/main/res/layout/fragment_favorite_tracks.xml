<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin"
    android:orientation="vertical"
    tools:context=".library.presentation.FavoriteTracksFragment">

    <ImageView
        android:id="@+id/errorPlaceholderImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="108dp"
        android:src="@drawable/search_error" />

    <TextView
        android:id="@+id/errorPlaceholderText"
        style="@style/ErrorPlaceholderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/library_error_favoriteTracks" />

</LinearLayout>